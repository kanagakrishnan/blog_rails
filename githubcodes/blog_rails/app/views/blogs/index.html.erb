<h1> List of Blogs </h1>
<table>
	<thead>
		<th>Title</th>
		<th>Author</th>
	</thead>
		<% @blogs.each do |a|%>
	<tr>
		<td> <%= a.title  %> </td>
		<td><%= a.author %> </td>
		<td><%= link_to 'show' ,blog_path(a.id) %></td>	
		 <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>
</br>
